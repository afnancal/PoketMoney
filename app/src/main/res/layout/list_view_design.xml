<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_bullet_listViewDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#8226;"
        android:textColor="@color/dark_yellow"
        android:textSize="33dp"
        android:visibility="invisible"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_check_details"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:visibility="visible"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_check"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_item_listViewDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_check_details"
        android:text="In publishing and graphic design and graphic design"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>