<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_referItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_profile_referItem"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_profile_bg"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/ll_info1_referItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/iv_profile_referItem"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_referItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Md Afnan Haseeb"
                    android:textColor="@color/purple_dark"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_earning_referItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earning: ₹0.00"
                    android:textColor="@color/grey"
                    android:textSize="14dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ll_info1_referItem"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_received1_referItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="₹0.00"
                    android:textColor="@color/dark_yellow"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_received2_referItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_received1_referItem"
                    android:layout_alignParentEnd="true"
                    android:text="Received"
                    android:textColor="@color/grey"
                    android:textSize="14dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/rl_referItem"
            android:layout_margin="10dp"
            android:background="@drawable/dotted_line" />
    </RelativeLayout>
</layout>